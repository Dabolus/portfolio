<section id="home" <%- data.page === 'home' ? '' : 'aria-hidden="true"' %>>
  <div>
    <h1><%= data.pages.home.greeting %></h1>
    <h2 id="phrases"><%- data.pages.home.phrases.prefix %><span id="typed"></span></h2>
    <div id="strings">
      <% data.pages.home.phrases.strings.forEach(str => { %>
        <h2><%- str %></h2>
      <% }) %>
    </div>
    <h2 id="since-2004"><%- data.pages.home.aim %></h2>
    <svg id="scroll-down" viewBox="0 0 24 24">
      <path fill="currentColor" d="M7.41,15.41L12,10.83L16.59,15.41L18,14L12,8L6,14L7.41,15.41Z"/>
    </svg>
  </div>
  <nav id="menu">
    <% Object.entries(data.pages).forEach(([id, { title, icon, link }]) => { %>
      <% if (id === 'home') { return; } %>

      <a href="<%= link || `/${locale}/${id}` %>" <%- link ? 'rel="external" target="' + id + '-link"' : ''%> id="<%= id %>-link">
        <span>
          <%= title %>
          <% if (link) { %>
            <svg viewBox="0 0 24 24">
              <path fill="currentColor" d="M14,3V5H17.59L7.76,14.83L9.17,16.24L19,6.41V10H21V3M19,19H5V5H12V3H5C3.89,3 3,3.9 3,5V19A2,2 0 0,0 5,21H19A2,2 0 0,0 21,19V12H19V19Z" />
            </svg>
          <% } %>
        </span>
        <svg viewBox="0 0 24 24">
          <path d="<%= icon %>"/>
        </svg>
      </a>
    <% }) %>
  </nav>
  <% Object.entries(data.pages).forEach(([id, { link }]) => { %>
    <% if (!link) { return; } %>
    <portal src="<%= link %>" id="<%= id %>-link-portal" aria-hidden="true" class="closed"></portal>
  <% }) %>
</section>
