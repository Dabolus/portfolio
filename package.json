{
  "name": "portfolio",
  "author": "Giorgio Garasto <giorgio@garasto.it>",
  "license": "MIT",
  "scripts": {
    "start": "cross-env NODE_ENV=development run-p start:frontend start:firebase",
    "start:frontend": "npm run clean:frontend && rollup -c rollup.config.js && run-p browser-sync watch:frontend",
    "start:firebase": "npm run clean:functions && npm --prefix functions run build && firebase serve",
    "build": "run-p build:frontend build:functions",
    "build:frontend": "npm run clean:frontend && cross-env NODE_ENV=production rollup -c rollup.config.js",
    "build:functions": "npm run clean:functions && cross-env NODE_ENV=production npm --prefix functions run build",
    "browser-sync": "browser-sync start -p localhost:5000 -f 'dist/**/*' --no-notify",
    "watch:frontend": "chokidar 'src/**/*' 'plugins/**/*' 'rollup.config.js' 'babel.config.js' 'tsconfig.json' -c 'rollup -c rollup.config.js'",
    "lint": "eslint '**/*.{ts,js}'",
    "format": "prettier --write '**/*.{ts,js,scss}'",
    "postinstall": "npm --prefix functions install",
    "clean:frontend": "rm -rf dist/",
    "clean:functions": "rm -rf functions/lib/",
    "deploy": "firebase deploy"
  },
  "dependencies": {
    "pwa-helpers": "^0.9.1",
    "systemjs": "^6.1.4",
    "typed.js": "^2.0.11"
  },
  "devDependencies": {
    "@babel/core": "^7.7.2",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/preset-modules": "^0.1.0",
    "@babel/preset-typescript": "^7.7.2",
    "@types/google.analytics": "0.0.40",
    "@types/typed.js": "^2.0.9",
    "@typescript-eslint/eslint-plugin": "^2.7.0",
    "@typescript-eslint/parser": "^2.7.0",
    "autoprefixer": "^9.7.1",
    "browser-sync": "^2.26.7",
    "chokidar-cli": "^2.1.0",
    "chrome-launcher": "^0.12.0",
    "cross-env": "^6.0.3",
    "cssnano": "^4.1.10",
    "ejs": "^2.7.2",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.5.0",
    "eslint-plugin-prettier": "^3.1.1",
    "fs-extra": "^8.1.0",
    "html-minifier": "^4.0.0",
    "lighthouse": "^5.6.0",
    "node-fetch": "^2.6.0",
    "node-sass": "^4.13.0",
    "node-telegram-bot-api": "^0.40.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^7.0.21",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^1.19.1",
    "rollup": "^1.27.0",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-copy": "^3.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-terser": "^5.1.2",
    "terser": "^4.4.0",
    "ts-node": "^8.5.2",
    "typescript": "^3.7.2",
    "workbox-build": "^5.0.0-rc.0"
  },
  "engines": {
    "node": "10"
  }
}
