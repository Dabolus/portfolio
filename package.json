{
  "name": "portfolio",
  "author": "Giorgio Garasto <giorgio@garasto.it>",
  "license": "MIT",
  "scripts": {
    "start": "cross-env NODE_ENV=development run-p start:frontend start:firebase",
    "start:frontend": "rollup -c rollup.config.js -w",
    "start:firebase": "npm --prefix functions run build && firebase serve",
    "build": "run-p build:frontend build:functions",
    "build:frontend": "cross-env NODE_ENV=production rollup -c rollup.config.js",
    "build:functions": "cross-env NODE_ENV=production npm --prefix functions run build",
    "lint": "eslint '**/*.{ts,js}'",
    "format": "prettier --write '**/*.{ts,js,scss}'",
    "postinstall": "npm --prefix functions install",
    "deploy": "firebase deploy"
  },
  "dependencies": {
    "@babel/runtime-corejs3": "^7.5.5",
    "core-js": "^3.2.1",
    "lozad": "^1.9.0",
    "pwa-helpers": "^0.9.1",
    "systemjs": "^5.0.0",
    "typed.js": "^2.0.10"
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/plugin-transform-runtime": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-typescript": "^7.3.3",
    "@types/gtag.js": "0.0.3",
    "@types/lozad": "^1.9.0",
    "@types/typed.js": "^2.0.9",
    "@typescript-eslint/eslint-plugin": "^2.0.0",
    "@typescript-eslint/parser": "^2.0.0",
    "autoprefixer": "^9.6.1",
    "cross-env": "^5.2.0",
    "cssnano": "^4.1.10",
    "ejs": "^2.6.2",
    "eslint": "^6.2.1",
    "eslint-config-prettier": "^6.1.0",
    "eslint-plugin-prettier": "^3.1.0",
    "fs-extra": "^8.1.0",
    "html-minifier": "^4.0.0",
    "node-sass": "^4.12.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^7.0.17",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^1.18.2",
    "rollup": "^1.20.1",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-commonjs": "^10.0.2",
    "rollup-plugin-copy": "^3.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-terser": "^5.1.1",
    "terser": "^4.2.0",
    "ts-node": "^8.3.0",
    "typescript": "^3.5.3",
    "workbox-build": "^5.0.0-beta.0"
  },
  "engines": {
    "node": "10"
  }
}
