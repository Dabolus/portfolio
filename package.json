{
  "name": "portfolio",
  "author": "Giorgio Garasto <giorgio@garasto.it>",
  "license": "MIT",
  "scripts": {
    "start": "cross-env NODE_ENV=development run-p start:frontend start:firebase",
    "start:frontend": "npm run clean:frontend && rollup -c rollup.config.js && run-p browser-sync watch:frontend",
    "start:firebase": "npm run clean:functions && npm --prefix functions run build && firebase serve",
    "build": "run-p build:frontend build:functions",
    "build:frontend": "npm run clean:frontend && cross-env NODE_ENV=production ts-node scripts/build",
    "build:functions": "npm run clean:functions && cross-env NODE_ENV=production npm --prefix functions run build",
    "browser-sync": "browser-sync start -p localhost:5000 -f 'dist/**/*' --no-notify",
    "watch:frontend": "chokidar 'src/**/*' 'plugins/**/*' 'rollup.config.js' 'babel.config.js' 'tsconfig.json' -c 'rollup -c rollup.config.js'",
    "lint": "eslint '**/*.{ts,js}'",
    "format": "prettier --write '**/*.{ts,js,scss}'",
    "postinstall": "npm --prefix functions install",
    "clean:frontend": "rm -rf dist/",
    "clean:functions": "rm -rf functions/lib/",
    "deploy": "firebase deploy"
  },
  "dependencies": {
    "core-js": "^3.6.5",
    "pwa-helpers": "^0.9.1",
    "systemjs": "^6.7.1",
    "typed.js": "^2.0.11"
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@babel/preset-env": "^7.11.5",
    "@babel/preset-typescript": "^7.10.4",
    "@csstools/postcss-sass": "^4.0.0",
    "@types/autoprefixer": "^9.7.2",
    "@types/cssnano": "^4.0.0",
    "@types/ejs": "^3.0.4",
    "@types/fs-extra": "^9.0.2",
    "@types/globby": "^9.1.0",
    "@types/google.analytics": "0.0.40",
    "@types/html-minifier": "^4.0.0",
    "@types/node-sass": "^4.11.1",
    "@types/typed.js": "^2.0.9",
    "@typescript-eslint/eslint-plugin": "^4.4.1",
    "@typescript-eslint/parser": "^4.4.1",
    "autoprefixer": "^10.0.1",
    "browser-sync": "^2.26.12",
    "chokidar-cli": "^2.1.0",
    "chrome-launcher": "^0.13.4",
    "cross-env": "^7.0.2",
    "cssnano": "^4.1.10",
    "ejs": "^3.1.5",
    "eslint": "^7.11.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-prettier": "^3.1.4",
    "fs-extra": "^9.0.1",
    "globby": "^11.0.1",
    "html-minifier": "^4.0.0",
    "lighthouse": "^6.4.1",
    "node-fetch": "^2.6.1",
    "node-sass": "^4.14.1",
    "node-telegram-bot-api": "^0.50.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.1.1",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^2.1.2",
    "rollup": "^2.30.0",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-copy": "^3.3.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-terser": "^7.0.2",
    "sync-rpc": "^1.3.6",
