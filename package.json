{
  "name": "@portfolio/root",
  "version": "0.1.0",
  "author": "Giorgio Garasto <giorgio@garasto.me>",
  "license": "MIT",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "yarn workspaces foreach -pit run start",
    "build": "yarn workspaces foreach -pit run build",
    "start:pwa": "yarn workspace @portfolio/pwa run start",
    "build:pwa": "yarn workspace @portfolio/pwa run build",
    "start:functions": "yarn workspace @portfolio/functions run start",
    "build:functions": "yarn workspace @portfolio/functions run build",
    "deploy": "firebase deploy",
    "lint": "eslint '**/*.{ts,js}'",
    "format": "prettier --write '**/*.{ts,js,scss}'",
    "test:e2e": "is-ci test:e2e:run test:e2e:open",
    "test:e2e:run": "start-server-and-test start:pwa http-get://localhost:3000 \"percy exec -- cypress run -C cypress/cypress.config.ts\"",
    "test:e2e:open": "start-server-and-test start:pwa http-get://localhost:3000 \"cypress open -C cypress/cypress.config.ts\""
  },
  "devDependencies": {
    "@percy/cli": "^1.26.3",
    "@percy/cypress": "^3.1.2",
    "@testing-library/cypress": "^9.0.0",
    "axe-core": "^4.7.2",
    "cypress": "^12.17.4",
    "cypress-axe": "^1.4.0",
    "firebase-tools": "^12.5.2",
    "is-ci-cli": "^2.2.0",
    "start-server-and-test": "^2.0.0",
    "typescript": "^5.2.2"
  },
  "workspaces": [
    "functions",
    "pwa"
  ],
  "resolutions": {
    "color": "3",
    "source-map": "0.8.0-beta.0"
  },
  "packageManager": "yarn@3.6.3"
}
