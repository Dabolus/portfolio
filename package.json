{
  "name": "@portfolio/root",
  "version": "0.1.0",
  "author": "Giorgio Garasto <giorgio@garasto.me>",
  "license": "MIT",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "lerna run start --stream",
    "build": "lerna run build --stream",
    "start:pwa": "yarn workspace @portfolio/pwa start",
    "build:pwa": "yarn workspace @portfolio/pwa run build",
    "start:functions": "yarn workspace @portfolio/functions start",
    "build:functions": "yarn workspace @portfolio/functions run build",
    "deploy": "firebase deploy",
    "lint": "eslint '**/*.{ts,js}'",
    "format": "prettier --write '**/*.{ts,js,scss}'",
    "test:e2e": "is-ci test:e2e:run test:e2e:open",
    "test:e2e:run": "start-server-and-test start:pwa http-get://localhost:3000 \"percy exec -- cypress run\"",
    "test:e2e:open": "start-server-and-test start:pwa http-get://localhost:3000 \"cypress open\""
  },
  "devDependencies": {
    "@percy/cli": "^1.2.1",
    "@percy/cypress": "^3.1.1",
    "@testing-library/cypress": "^8.0.2",
    "axe-core": "^4.4.1",
    "cypress": "^9.7.0",
    "cypress-axe": "^0.14.0",
    "firebase-tools": "^11.0.1",
    "is-ci-cli": "^2.2.0",
    "lerna": "^5.0.0",
    "start-server-and-test": "^1.14.0",
    "typescript": "^4.7.2"
  },
  "workspaces": [
    "functions",
    "pwa"
  ],
  "resolutions": {
    "color": "3"
  },
  "packageManager": "yarn@3.2.1"
}
