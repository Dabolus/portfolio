{
  "compilerOptions": {
    "rootDir": ".",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "strictNullChecks": false,
    "allowJs": true,
    "checkJs": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "lib": [
      "dom",
      "esnext"
    ],
    "target": "es6"
  },
  "include": [
    "typings/**/*.d.ts",
    "webpack/**/*.ts",
    "src/**/*.ts"
  ]
}
