<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9" xmlns:xhtml="http://www.w3.org/1999/xhtml">
  <%# The pages should be sorted by priority %>
  <%# NOTE: we assume a maximum of 11 pages %>
  <% pages.forEach((page, index) => { %>
    <% const slug = page === 'home' ? '' : page %>
    <url>
      <%# We consider the first locale in the array to be the default one %>
      <loc><%= `${baseUrl}/${locales[0]}/${slug}` %></loc>
      <xhtml:link rel="alternate" hreflang="x-default" href="<%= `${baseUrl}/${locales[0]}/${slug}` %>" />
      <% locales.forEach(locale => { %>
        <xhtml:link rel="alternate" hreflang="<%= locale %>" href="<%= `${baseUrl}/${locale}/${slug}` %>" />
      <% }) %>

      <changefreq>monthly</changefreq>
      <priority><%= (1 - index / 10).toFixed(1) %></priority>
      <lastmod><%= now %></lastmod>
    </url>
  <% }) %>
</urlset>
