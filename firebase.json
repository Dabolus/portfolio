{
  "functions": {
    "predeploy": "npm run build:functions",
    "source": "functions"
  },
  "hosting": {
    "predeploy": "npm run build:frontend",
    "public": "dist",
    "cleanUrls": true,
    "ignore": [
      "firebase.json",
      "package.json",
      "rollup.config.js",
      "tsconfig.json",
      "package-lock.json",
      "**/.*",
      "**/node_modules/**",
      "src/**",
      "plugins/**",
      "scripts/**",
      "functions/**"
    ],
    "rewrites": [
      {
        "source": "/api/projects",
        "function": "getProjects"
      },
      {
        "source": "/api/certifications",
        "function": "getCertifications"
      },
      {
        "source": "/api/skills",
        "function": "getSkills"
      },
      {
        "source": "/api/email",
        "function": "sendEmail"
      }
    ],
    "headers": [
      {
        "source": "**",
        "headers": [
          {
            "key": "Set-Cookie",
            "value": "HttpOnly; Secure; SameSite=Strict"
          },
          {
            "key": "Strict-Transport-Security",
            "value": "max-age=31556926"
          },
          {
            "key": "Referrer-Policy",
            "value": "no-referrer"
          },
          {
            "key": "Content-Security-Policy",
            "value": "script-src 'self' 'unsafe-inline' https://www.google-analytics.com https://www.google.com/recaptcha/ https://www.gstatic.com/recaptcha/; style-src 'self' 'unsafe-inline'; img-src 'self' 'unsafe-inline' data: https://firebasestorage.googleapis.com https://www.google-analytics.com; frame-src 'self' https://giorgio.garasto.blog https://www.google.com/recaptcha/; default-src 'self'"
          }
        ]
      },
      {
        "source" : "**/sw.js",
        "headers" : [
          {
            "key" : "Service-Worker-Allowed",
            "value" : "/"
          },
          {
            "key" : "Cache-Control",
            "value" : "no-cache"
          }
        ]
      }
    ]
  }
}
