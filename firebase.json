{
  "functions": {
    "predeploy": "npm run build:functions",
    "source": "functions"
  },
  "hosting": {
    "predeploy": "npm run build:frontend",
    "public": "dist",
    "ignore": [
      "firebase.json",
      "package.json",
      "rollup.config.js",
      "tsconfig.json",
      "package-lock.json",
      "**/.*",
      "**/node_modules/**",
      "src/**",
      "plugins/**",
      "scripts/**",
      "functions/**"
    ],
    "rewrites": [
      {
        "source": "/api/projects",
        "function": "getProjects"
      },
      {
        "source": "/api/skills",
        "function": "getSkills"
      },
      {
        "source": "**",
        "function": "ssr"
      }
    ],
    "headers": [
      {
        "source" : "**/sw.js",
        "headers" : [
          {
            "key" : "Service-Worker-Allowed",
            "value" : "/"
          },
          {
            "key" : "Cache-Control",
            "value" : "no-cache"
          }
        ]
      }
    ]
  }
}
